{
    "name": "MNIST Classification Challenge",
    "data_path": "data",
    "train_data_loader":{
        "name": "MNIST training dataloader",
        "args": {
            "root": "data",
            "csv_file": "train.csv",
            "batch_size": 64,
            "shuffle": true, 
            "num_workers": 0
        }
    },
    "val_data_loader":{
        "name": "MNIST validation dataloader",
        "args": {
            "root": "data",
            "csv_file": "val.csv",
            "batch_size": 32,
            "shuffle": false,
            "num_workers": 0
        }
    },
    "metrics": ["accuracy"],
    "loss": "neg_log_llhood",
    "trainer":{
        "resume_path": "",
        "save_dir": "saved",
        "device": "GPU",
        "log_step": 20,
        "do_validation": true,
        "validation_step": 1,
        "epochs": 100,
        "tracked_metric": ["val_neg_log_llhood", "min"],
        "patience": 10,
        "save_period": 1,
        "save_result": false
    },
    "optimizer":{
        "name": "SGD",
        "args":{
            "lr": 0.01
        }   
    },
    "lr_scheduler":{
        "name": "ReduceLROnPlateau",
        "args":{
            "mode": "min",
            "threshold": 0.01,
            "factor": 0.5,
            "patience": 1,
            "verbose": true,
            "min_lr": 1e-05,
            "threshold_mode": "rel"
        }
    }

}